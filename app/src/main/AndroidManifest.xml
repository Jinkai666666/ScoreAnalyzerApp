<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 注意：不要写 package="…"，namespace 已在 Gradle 脚本中配置 -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScoreAnalyzerApp"
        tools:targetApi="31">

        <activity
            android:name="com.kai.scoreanalyzer.QueryActivity"
            android:exported="false" />
        <activity
            android:name="com.kai.scoreanalyzer.EditScoreActivity" />
        <activity
            android:name="com.kai.scoreanalyzer.ScoreListActivity"
            android:exported="false" />
        <activity
            android:name="com.kai.scoreanalyzer.ResultActivity"
            android:exported="false" />
        <activity
            android:name="com.kai.scoreanalyzer.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ScoreAnalyzerApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
